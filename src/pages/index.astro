---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import CSSOnlyBackground from "../components/CSSOnlyBackground.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_SUBTITLE, SITE_TITLE } from "../consts";

const posts = (await getCollection("blog"))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4); // 取最新的4篇文章
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<CSSOnlyBackground />
		<Header />
		<main class="anime-content-wrapper">
			<!-- 英雄区域 -->
			<section
				class="anime-hero-section mb-12 transition-colors duration-300"
			>
				<div class="anime-hero-decoration"></div>
				<div
					class="container mx-auto px-4 py-16 text-center relative z-10"
				>
					<div class="anime-mascot left"></div>
					<div class="anime-mascot right"></div>
					<h1
						class="anime-title text-4xl md:text-5xl font-bold mb-4 text-gray-800 dark:text-gray-100"
					>
						<span class="anime-highlight">{SITE_SUBTITLE}</span>
					</h1>
					<p
						class="anime-subtitle text-lg md:text-xl max-w-3xl mx-auto mb-8 text-gray-700 dark:text-gray-300"
					>
						{SITE_DESCRIPTION}
					</p>
					<div class="flex flex-wrap justify-center gap-4">
						<a href="/blog" class="anime-btn"> 阅读博客 </a>
						<a
							href="/about"
							class="anime-btn"
							style="background: linear-gradient(135deg, #6b73ff, #000dff);"
						>
							关于我
						</a>
					</div>
				</div>
			</section>

			<!-- 最新文章部分 -->
			<section class="mb-16">
				<div class="container mx-auto px-4">
					<h2 class="anime-section-title text-3xl font-bold mb-8">
						最新文章
					</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						{
							posts.map((post) => (
								<article class="anime-card kawaii-post-card">
									<a
										href={`/blog/${post.id}/`}
										class="post-link"
									>
										{post.data.heroImage && (
											<div class="kawaii-image-wrapper">
												<img
													width={720}
													height={360}
													src={
														post.data.heroImage.src
													}
													alt=""
													class="mb-4 rounded-lg kawaii-image"
												/>
											</div>
										)}
										<h3 class="kawaii-post-title text-xl font-bold mb-2">
											{post.data.title}
										</h3>
									</a>
									<div class="kawaii-post-details mb-3">
										<span class="kawaii-tag">
											{post.data.category || "博客"}
										</span>
										<span class="mx-2">•</span>
										<span class="kawaii-date">
											<FormattedDate
												date={post.data.pubDate}
											/>
										</span>
									</div>
									<p class="kawaii-description text-gray-700 dark:text-gray-300 mb-4">
										{post.data.description}
									</p>
									<a
										href={`/blog/${post.id}/`}
										class="text-accent font-medium"
									>
										阅读更多
									</a>
								</article>
							))
						}
					</div>
					<div class="text-center mt-8">
						<a href="/blog" class="btn-outline">查看所有文章</a>
					</div>
				</div>
			</section>

			<!-- 项目展示部分 -->
			<section
				class="mb-16 bg-gray-100 dark:bg-dark-secondary py-16 transition-colors duration-300"
			>
				<div class="container mx-auto px-4">
					<h2 class="text-3xl font-bold mb-8 dark:text-white">
						项目展示
					</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
