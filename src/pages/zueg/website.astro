---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import BaseLayout from "../../layouts/BaseLayout.astro";

// 获取所有zueg文章
const allPosts = await getCollection("zueg");
const posts = allPosts
    .filter(
        (post) =>
            post.data.category === "网站" ||
            post.data.tags?.includes("网站") ||
            post.id.startsWith("website/"),
    )
    .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<BaseLayout title={`网站随笔 | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <h1
                class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-100"
            >
                网站随笔
            </h1>
            <p class="text-lg mb-8 text-gray-700 dark:text-gray-300">
                关于网站建设、Web开发和在线服务的随笔。
            </p>

            {
                posts.length > 0 ? (
                    <div class="space-y-6">
                        {posts.map((post) => (
                            <article class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-lg transition">
                                <h2>
                                    <a
                                        href={`/zueg/website/${post.id.startsWith("website/") ? post.id.replace("website/", "") : post.id}`}
                                        class="text-xl font-medium hover:text-blue-500 text-gray-900 dark:text-white"
                                    >
                                        {post.data.title}
                                    </a>
                                </h2>
                                <div class="flex items-center gap-4 mt-2">
                                    <FormattedDate date={post.data.pubDate} />
                                    {post.data.tags &&
                                        post.data.tags.length > 0 && (
                                            <div class="flex gap-2">
                                                {post.data.tags.map(
                                                    (tag: string) => (
                                                        <span class="text-xs bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 px-2 py-1 rounded">
                                                            {tag}
                                                        </span>
                                                    ),
                                                )}
                                            </div>
                                        )}
                                </div>
                                {post.data.description && (
                                    <p class="text-gray-600 dark:text-gray-300 mt-3">
                                        {post.data.description}
                                    </p>
                                )}
                            </article>
                        ))}
                    </div>
                ) : (
                    <div class="text-center py-12">
                        <div class="text-gray-400 dark:text-gray-500 mb-4">
                            <svg
                                class="mx-auto h-12 w-12"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                                />
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
                            暂无网站相关随笔
                        </h3>
                        <p class="text-gray-500 dark:text-gray-400">
                            还没有发布网站相关的随笔。请先在 /src/content/zueg/
                            目录下添加一些文章。
                        </p>
                    </div>
                )
            }
        </div>
    </main>
</BaseLayout>
