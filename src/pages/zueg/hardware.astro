---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import BaseLayout from "../../layouts/BaseLayout.astro";

// 获取所有zueg文章
const allPosts = await getCollection("zueg");
const posts = allPosts
    .filter(
        (post) =>
            post.data.category === "硬件" ||
            post.data.tags?.includes("硬件") ||
            post.id.startsWith("hardware/"),
    )
    .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<BaseLayout title={`硬件随笔 | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <h1
                class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-100"
            >
                硬件随笔
            </h1>
            <p class="text-lg mb-8 text-gray-700 dark:text-gray-300">
                关于硬件设备、数码产品和技术体验的分享。
            </p>

            {
                posts.length > 0 ? (
                    <div class="space-y-6">
                        {posts.map((post) => (
                            <article class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-lg transition">
                                <h2>
                                    <a
                                        href={`/zueg/hardware/${post.id.startsWith("hardware/") ? post.id.replace("hardware/", "") : post.id}`}
                                        class="text-xl font-medium hover:text-blue-500 text-gray-900 dark:text-white"
                                    >
                                        {post.data.title}
                                    </a>
                                </h2>
                                <div class="flex items-center gap-4 mt-2">
                                    <FormattedDate date={post.data.pubDate} />
                                    {post.data.tags &&
                                        post.data.tags.length > 0 && (
                                            <div class="flex gap-2">
                                                {post.data.tags.map((tag) => (
                                                    <span class="text-xs bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-2 py-1 rounded">
                                                        {tag}
                                                    </span>
                                                ))}
                                            </div>
                                        )}
                                </div>
                                {post.data.description && (
                                    <p class="text-gray-600 dark:text-gray-300 mt-2">
                                        {post.data.description}
                                    </p>
                                )}
                            </article>
                        ))}
                    </div>
                ) : (
                    <div class="text-center py-12">
                        <div class="text-gray-400 dark:text-gray-500 mb-4">
                            <svg
                                class="mx-auto h-12 w-12"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                />
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
                            暂无硬件相关文章
                        </h3>
                        <p class="text-gray-500 dark:text-gray-400">
                            还没有发布关于硬件的随笔。可以在文章的 frontmatter
                            中设置 category 为 "硬件" 或添加 "硬件" 标签。
                        </p>
                    </div>
                )
            }
        </div>
    </main>
</BaseLayout>
