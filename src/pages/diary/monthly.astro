---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import BaseLayout from "../../layouts/BaseLayout.astro";

// 获取所有日记并筛选月记
const allDiaries = await getCollection("diary");

// 获取月记（标题包含"月记"或"月总结"）
const monthlyDiaries = allDiaries
    .filter(
        (diary) =>
            diary.data.title.includes("月记") ||
            diary.data.title.includes("月总结") ||
            (diary.data.title.includes("月") &&
                (diary.data.title.includes("总结") ||
                    diary.data.title.includes("回顾"))),
    )
    .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// 按年份分组
const groupedByYear = monthlyDiaries.reduce(
    (acc, diary) => {
        const year = diary.data.pubDate.getFullYear();
        if (!acc[year]) acc[year] = [];
        acc[year].push(diary);
        return acc;
    },
    {} as Record<number, typeof monthlyDiaries>,
);
---

<BaseLayout title={`每月日记 | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <h1
                class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-100"
            >
                每月日记
            </h1>
            <p class="text-lg mb-8 text-gray-700 dark:text-gray-300">
                按月整理的生活总结，记录每个月的重要时刻和成长收获。
            </p>

            {
                monthlyDiaries.length > 0 ? (
                    <div class="space-y-8">
                        {Object.entries(groupedByYear)
                            .sort(([a], [b]) => Number(b) - Number(a))
                            .map(([year, diaries]) => (
                                <div class="year-section">
                                    <h2 class="text-2xl font-semibold mb-6 text-gray-800 dark:text-gray-200 border-b-2 border-green-200 dark:border-green-800 pb-2">
                                        {year}年
                                    </h2>
                                    <div class="space-y-6">
                                        {diaries.map((diary) => (
                                            <article class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-lg transition border-l-4 border-green-400">
                                                <div class="flex justify-between items-start mb-4">
                                                    <h3>
                                                        <a
                                                            href={`/diary/monthly/${diary.id}`}
                                                            class="text-xl font-medium hover:text-green-500 text-gray-900 dark:text-white transition-colors"
                                                        >
                                                            {diary.data.title}
                                                        </a>
                                                    </h3>
                                                    <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                                                        <FormattedDate
                                                            date={
                                                                diary.data
                                                                    .pubDate
                                                            }
                                                        />
                                                        {diary.data.mood && (
                                                            <span class="text-green-600 dark:text-green-400">
                                                                💫{" "}
                                                                {
                                                                    diary.data
                                                                        .mood
                                                                }
                                                            </span>
                                                        )}
                                                    </div>
                                                </div>
                                                {diary.data.description && (
                                                    <p class="text-gray-600 dark:text-gray-300 mb-4 leading-relaxed">
                                                        {diary.data.description}
                                                    </p>
                                                )}
                                                {diary.data.tags &&
                                                    diary.data.tags.length >
                                                        0 && (
                                                        <div class="flex gap-2 flex-wrap">
                                                            {diary.data.tags.map(
                                                                (tag) => (
                                                                    <span class="text-xs bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 px-3 py-1 rounded-full">
                                                                        # {tag}
                                                                    </span>
                                                                ),
                                                            )}
                                                        </div>
                                                    )}
                                            </article>
                                        ))}
                                    </div>
                                </div>
                            ))}
                    </div>
                ) : (
                    <div class="text-center py-12">
                        <div class="text-gray-400 dark:text-gray-500 mb-4">
                            <svg
                                class="mx-auto h-12 w-12"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                />
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
                            暂无月记
                        </h3>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">
                            还没有写过月记。开始记录每月的精彩时光吧！
                        </p>
                        <div class="text-sm text-gray-600 dark:text-gray-400 bg-gray-50 dark:bg-gray-800 p-4 rounded-lg max-w-md mx-auto">
                            <p class="font-medium mb-2">如何添加月记：</p>
                            <ul class="text-left space-y-1">
                                <li>
                                    • 在{" "}
                                    <code class="bg-gray-200 dark:bg-gray-700 px-1 rounded">
                                        src/content/diary/monthly/
                                    </code>{" "}
                                    目录下创建 .md 文件
                                </li>
                                <li>• 标题包含"月记"、"月总结"或"月回顾"</li>
                            </ul>
                        </div>
                    </div>
                )
            }
        </div>
    </main>
</BaseLayout>
>

<h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
    暂无月记
</h3>
