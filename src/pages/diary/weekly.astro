---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import BaseLayout from "../../layouts/BaseLayout.astro";

// 获取所有日记并按周分组
const allDiaries = await getCollection("diary");

// 获取周记（标题包含"周记"或"第X周"）
const weeklyDiaries = allDiaries
    .filter(
        (diary) =>
            diary.data.title.includes("周记") ||
            (diary.data.title.includes("第") &&
                diary.data.title.includes("周")),
    )
    .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// 按年份分组
const groupedByYear = weeklyDiaries.reduce(
    (acc, diary) => {
        const year = diary.data.pubDate.getFullYear();
        if (!acc[year]) acc[year] = [];
        acc[year].push(diary);
        return acc;
    },
    {} as Record<number, typeof weeklyDiaries>,
);
---

<BaseLayout title={`每周日记 | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <h1
                class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-100"
            >
                每周日记
            </h1>
            <p class="text-lg mb-8 text-gray-700 dark:text-gray-300">
                按周汇总的生活记录，记录每周的成长与感悟。
            </p>

            {
                weeklyDiaries.length > 0 ? (
                    <div class="space-y-8">
                        {Object.entries(groupedByYear)
                            .sort(([a], [b]) => Number(b) - Number(a))
                            .map(([year, diaries]) => (
                                <div class="year-section">
                                    <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200 border-b-2 border-blue-200 dark:border-blue-800 pb-2">
                                        {year}年
                                    </h2>
                                    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
                                        {diaries.map((diary) => (
                                            <article class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-lg transition group">
                                                <h3>
                                                    <a
                                                        href={`/diary/weekly/${diary.id}`}
                                                        class="text-lg font-medium hover:text-blue-500 text-gray-900 dark:text-white group-hover:text-blue-500 transition-colors"
                                                    >
                                                        {diary.data.title}
                                                    </a>
                                                </h3>
                                                <div class="flex items-center gap-4 mt-2 text-sm">
                                                    <FormattedDate
                                                        date={
                                                            diary.data.pubDate
                                                        }
                                                    />
                                                    {diary.data.mood && (
                                                        <span class="text-blue-600 dark:text-blue-400">
                                                            😊 {diary.data.mood}
                                                        </span>
                                                    )}
                                                </div>
                                                {diary.data.description && (
                                                    <p class="text-gray-600 dark:text-gray-300 mt-3 text-sm line-clamp-2">
                                                        {diary.data.description}
                                                    </p>
                                                )}
                                                {diary.data.tags &&
                                                    diary.data.tags.length >
                                                        0 && (
                                                        <div class="flex gap-2 mt-3 flex-wrap">
                                                            {diary.data.tags
                                                                .slice(0, 3)
                                                                .map((tag) => (
                                                                    <span class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-1 rounded">
                                                                        {tag}
                                                                    </span>
                                                                ))}
                                                        </div>
                                                    )}
                                            </article>
                                        ))}
                                    </div>
                                </div>
                            ))}
                    </div>
                ) : (
                    <div class="text-center py-12">
                        <div class="text-gray-400 dark:text-gray-500 mb-4">
                            <svg
                                class="mx-auto h-12 w-12"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                />
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
                            暂无周记
                        </h3>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">
                            还没有写过周记。开始记录每周的生活吧！
                        </p>
                        <div class="text-sm text-gray-600 dark:text-gray-400 bg-gray-50 dark:bg-gray-800 p-4 rounded-lg max-w-md mx-auto">
                            <p class="font-medium mb-2">如何添加周记：</p>
                            <ul class="text-left space-y-1">
                                <li>
                                    • 在{" "}
                                    <code class="bg-gray-200 dark:bg-gray-700 px-1 rounded">
                                        src/content/diary/weekly/
                                    </code>{" "}
                                    目录下创建 .md 文件
                                </li>
                                <li>• 标题包含"周记"或"第X周"</li>
                            </ul>
                        </div>
                    </div>
                )
            }
        </div>
    </main>
</BaseLayout>
>

<h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
    暂无周记
</h3>
<p class="text-gray-500 dark:text-gray-400">功能开发中，敬请期待。</p>
