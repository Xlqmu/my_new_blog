---
import { type CollectionEntry, getCollection, render } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_TITLE } from "../../consts";

export async function getStaticPaths() {
    const diaryEntries = await getCollection("diary");
    return diaryEntries.map((entry) => ({
        params: { slug: entry.id },
        props: entry,
    }));
}

type Props = CollectionEntry<"diary">;

const entry = Astro.props;
const { Content } = await render(entry);
---

<!doctype html>
<html lang="zh-CN">
    <head>
        <BaseHead
            title={`${entry.data.title} | ${SITE_TITLE}`}
            description={entry.data.description || "日记条目"}
        />
    </head>
    <body>
        <Header />
        <main class="container mx-auto px-4 py-8">
            <div class="max-w-3xl mx-auto">
                <!-- 返回链接 -->
                <a
                    href="/diary"
                    class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline mb-6"
                >
                    ← 返回日记列表
                </a>

                <article
                    class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8"
                >
                    <!-- 文章头部 -->
                    <header class="mb-8">
                        <h1
                            class="text-3xl font-bold mb-4 text-gray-800 dark:text-gray-100"
                        >
                            {entry.data.title}
                        </h1>

                        <div
                            class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-4"
                        >
                            <div class="flex items-center gap-2">
                                <span>📅</span>
                                <FormattedDate date={entry.data.pubDate} />
                            </div>

                            {
                                entry.data.mood && (
                                    <div class="flex items-center gap-2">
                                        <span>心情：</span>
                                        <span>{entry.data.mood}</span>
                                    </div>
                                )
                            }

                            {
                                entry.data.weather && (
                                    <div class="flex items-center gap-2">
                                        <span>天气：</span>
                                        <span>{entry.data.weather}</span>
                                    </div>
                                )
                            }

                            {
                                entry.data.location && (
                                    <div class="flex items-center gap-2">
                                        <span>📍</span>
                                        <span>{entry.data.location}</span>
                                    </div>
                                )
                            }
                        </div>

                        {
                            entry.data.tags && (
                                <div class="flex flex-wrap gap-2">
                                    {entry.data.tags.map((tag) => (
                                        <span class="px-3 py-1 text-sm bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full">
                                            #{tag}
                                        </span>
                                    ))}
                                </div>
                            )
                        }
                    </header>

                    <!-- 文章内容 -->
                    <div class="prose prose-lg dark:prose-invert max-w-none">
                        <Content />
                    </div>
                </article>

                <!-- 导航 -->
                <nav class="flex justify-between items-center mt-8">
                    <a
                        href="/diary"
                        class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition"
                    >
                        ← 日记列表
                    </a>

                    <div class="text-center">
                        <a
                            href="/diary/timeline"
                            class="text-blue-600 dark:text-blue-400 hover:underline"
                        >
                            查看时间线
                        </a>
                    </div>

                    <div class="w-24"></div>
                    <!-- 占位符保持对称 -->
                </nav>
            </div>
        </main>
        <Footer />
    </body>
</html>
