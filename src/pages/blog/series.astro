---
import { getCollection } from "astro:content";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import BaseLayout from "../../layouts/BaseLayout.astro";

// 获取所有博客文章
const posts = await getCollection("blog");

// 统计系列
const seriesCounts: Record<string, number> = {};
const seriesPosts: Record<string, typeof posts> = {};

posts.forEach((post) => {
    const series = post.data.series;
    if (series) {
        seriesCounts[series] = (seriesCounts[series] || 0) + 1;
        if (!seriesPosts[series]) {
            seriesPosts[series] = [];
        }
        seriesPosts[series].push(post);
    }
});

// 按文章数量排序
const sortedSeries = Object.entries(seriesCounts).sort(([, a], [, b]) => b - a);
---

<BaseLayout title={`系列 | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <h1
                class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-100"
            >
                博客系列
            </h1>
            <p class="text-lg mb-8 text-gray-700 dark:text-gray-300">
                按系列浏览相关文章。
            </p>

            {
                sortedSeries.length > 0 ? (
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {sortedSeries.map(([series, count]) => (
                            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-lg transition">
                                <div class="flex items-center justify-between mb-4">
                                    <h2 class="text-xl font-bold text-gray-900 dark:text-white">
                                        {series}
                                    </h2>
                                    <span class="text-sm text-gray-500 dark:text-gray-400">
                                        {count} 篇文章
                                    </span>
                                </div>

                                <div class="space-y-3">
                                    {seriesPosts[series]
                                        .sort(
                                            (a, b) =>
                                                a.data.pubDate.getTime() -
                                                b.data.pubDate.getTime(),
                                        )
                                        .map((post, index) => (
                                            <div class="flex items-center">
                                                <span class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-1 rounded mr-2">
                                                    {index + 1}
                                                </span>
                                                <a
                                                    href={`/blog/${post.id}`}
                                                    class="text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-200 truncate"
                                                >
                                                    {post.data.title}
                                                </a>
                                            </div>
                                        ))}
                                </div>
                            </div>
                        ))}
                    </div>
                ) : (
                    <div class="text-center py-12">
                        <div class="text-gray-400 dark:text-gray-500 mb-4">
                            <svg
                                class="mx-auto h-12 w-12"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                                />
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
                            暂无系列文章
                        </h3>
                        <p class="text-gray-500 dark:text-gray-400">
                            还没有创建任何文章系列。你可以在文章的 frontmatter
                            中添加 'series' 字段来创建系列。
                        </p>
                    </div>
                )
            }
        </div>
    </main>
</BaseLayout>
